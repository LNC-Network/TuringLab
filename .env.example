# TuringLab Environment Variables
# Copy this file to .env and configure for your environment

# ============================================
# GLOBAL CONFIGURATION
# ============================================

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# OLLAMA CONFIGURATION
# ============================================

# URL where Ollama is running
# Default: http://localhost:11434
OLLAMA_URL=http://localhost:11434

# Default model to use for text generation
# Options: gemma2:2b, llama2, mistral, qwen2.5:3b, mixtral
# Smaller models are faster but less capable
OLLAMA_MODEL=gemma2:2b

# ============================================
# BACKEND CONFIGURATION
# ============================================

# Backend server port
PORT=4000

# Backend server host
# Use 127.0.0.1 for localhost only
# Use 0.0.0.0 to allow external connections
HOST=127.0.0.1

# ============================================
# FRONTEND CONFIGURATION
# ============================================

# Frontend port (configured in apps/frontend)
NEXT_PUBLIC_FRONTEND_PORT=3000

# Backend API URL (for frontend to connect to)
NEXT_PUBLIC_API_URL=http://127.0.0.1:4000

# ============================================
# SECURITY (Optional)
# ============================================

# JWT secret for authentication (if implementing auth)
# JWT_SECRET=your-super-secret-jwt-key-change-this

# CORS allowed origins (comma-separated)
# Default: * (allow all - only for development)
# Production: set to your frontend URL
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ============================================
# EXTERNAL APIs (Optional)
# ============================================

# OpenAI API Key (if you want to add OpenAI support)
# OPENAI_API_KEY=sk-...

# Google Custom Search API (for web search tool)
# GOOGLE_SEARCH_API_KEY=your-api-key
# GOOGLE_SEARCH_ENGINE_ID=your-engine-id

# Bing Search API (alternative for web search)
# BING_SEARCH_API_KEY=your-api-key

# Weather API (if adding weather tool)
# WEATHER_API_KEY=your-api-key

# ============================================
# LOGGING & DEBUGGING
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable debug mode for detailed logs
DEBUG=false

# ============================================
# PERFORMANCE
# ============================================

# Maximum conversation history to maintain
MAX_HISTORY_MESSAGES=10

# Maximum tokens for generation
MAX_TOKENS=512

# Temperature for text generation (0.0 to 1.0)
# Lower = more focused, Higher = more creative
TEMPERATURE=0.7

# Agent maximum iterations
AGENT_MAX_ITERATIONS=5

# Request timeout in milliseconds
REQUEST_TIMEOUT=60000

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable code executor tool (security risk!)
ENABLE_CODE_EXECUTOR=true

# Enable/disable file operations tool
ENABLE_FILE_OPERATIONS=true

# Enable/disable web search tool
ENABLE_WEB_SEARCH=false

# ============================================
# DATABASE (Optional - for future features)
# ============================================

# Database connection string (if implementing persistence)
# DATABASE_URL=postgresql://user:password@localhost:5432/turinglab

# Redis URL (if implementing caching)
# REDIS_URL=redis://localhost:6379

# ============================================
# MONITORING & ANALYTICS (Optional)
# ============================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://...@sentry.io/...

# Google Analytics ID
# GA_TRACKING_ID=G-XXXXXXXXXX

# ============================================
# NOTES
# ============================================

# 1. Never commit .env files to version control
# 2. Keep this .env.example file updated
# 3. Restart servers after changing environment variables
# 4. Use strong secrets in production
# 5. Minimize enabled features for better security
